<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackathon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:name="com.hackathon.IntroActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hackathon.MainActivity"></activity>
        <activity android:name="com.hackathon.QuantityChoiceActivity"></activity>
        <activity android:name="com.hackathon.PriceChoiceActivity"></activity>
        <activity android:name="com.hackathon.MenuActivity"></activity>
        <activity android:name="com.hackathon.WholeViewActivity"></activity>
    </application>

</manifest>
